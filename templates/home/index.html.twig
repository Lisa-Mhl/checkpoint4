{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <h1 class="mainTitle">WHADUP</h1>
    <div class="articleCtn">
    {% if app.user %}
        <a class="publishLink" href="{{ path('article_new') }}">Publier un article</a>
    {% endif %}
    {% for article in articles %}
        <article class="card articleCard">
            <h3 class="card-title text-center bold">{{ article.title }}</h3>
            <img class="card-img" src="{{ article.poster }}" alt="article poster">
            <p class="card-body"><span class="bold">Article publi√© par : {{ article.author }}</span> <br><br>
                {{ article.description }}</p>
            <a href="{{ path('article_show', {'id':article.id}) }}" class="card-link text-center">Lire l'article</a>
        </article>
        </div>
    {% endfor %}
{% endblock %}
