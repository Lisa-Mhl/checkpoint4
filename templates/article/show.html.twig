{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="mainTitle">{{ article.title }}</h1>
    <h3 class="text-center">Publi√© par {{ article.author }}</h3>
    <div class="card">
        <img class="card-img" src="{{ article.poster }}" alt="Illustration article">
    </div>
    <article class="card-body">{{ article.content }}</article>
    {% if article.link %}
        <a href="{{ article.link }}" target="_blank">En savoir plus</a><br>
    {% endif %}
    <div class="card-link text-center">
        <a href="{{ path('home') }}">Retour aux articles</a>
    </div>

    {% if app.user %}
        {% if app.user is same as (article.author) %}
            <a href="{{ path('article_edit', {'id': article.id}) }}"> Modifier l'article</a>
        {% endif %}
    {% endif %}

{% endblock %}
