        <a href="/">Accueil</a>
        <a href="{{ path('debug') }}">Débug</a>
        <a href="{{ path('profile') }}">Profil</a>
        <a href="{{ path('app_logout') }}">Se déconnecter</a>
        {% else %}
        <a href="{{ path('app_login') }}">Connexion</a>
        {% endif %}
    </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
