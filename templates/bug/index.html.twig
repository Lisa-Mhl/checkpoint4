{% extends 'base.html.twig' %}

{% block title %}Bug index{% endblock %}

{% block body %}
    <h1>Bug index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Content</th>
                <th>ImgA</th>
                <th>ImgB</th>
                <th>ImgC</th>
                <th>Resolved</th>
                <th>Stack</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bug in bugs %}
            <tr>
                <td>{{ bug.id }}</td>
                <td>{{ bug.title }}</td>
                <td>{{ bug.description }}</td>
                <td>{{ bug.content }}</td>
                <td>{{ bug.imgA }}</td>
                <td>{{ bug.imgB }}</td>
                <td>{{ bug.imgC }}</td>
                <td>{{ bug.resolved ? 'Yes' : 'No' }}</td>
                <td>{{ bug.stack }}</td>
                <td>
                    <a href="{{ path('bug_show', {'id': bug.id}) }}">show</a>
                    <a href="{{ path('bug_edit', {'id': bug.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bug_new') }}">Create new</a>
{% endblock %}
